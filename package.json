{
  "name": "express-graphql-mongodb",
  "version": "0.0.1",
  "description": "A GraphQL endpoint using express and mongodb",
  "main": "app.js",
  "scripts": {
    "build": "npm-run-all clean build:src build:tests",
    "build:src": "babel src -d lib/src --copy-files",
    "build:tests": "babel tests -d lib/tests",
    "clean": "npm-run-all clean:src clean:tests",
    "clean:src": "rimraf lib/src",
    "clean:tests": "rimraf lib/tests",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "start": "forever -c 'nodemon --exitcrash --exec babel-node' src/app.js",
    "serve": "babel-node lib/src/app.js",
    "test": "npm-run-all build test:mocha",
    "test:mocha": "mocha --require @babel/polyfill 'lib/tests/**/*.spec.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaelRowley/ipfs-platform-backend.git"
  },
  "author": "Cael Rowley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CaelRowley/ipfs-platform-backend/issues"
  },
  "homepage": "https://github.com/CaelRowley/ipfs-platform-backend#readme",
  "dependencies": {
    "apollo-server-express": "^2.3.3",
    "app-root-path": "^2.1.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "fs": "0.0.1-security",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.4",
    "mongoose": "^5.4.8",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "axios": "^0.18.0",
    "babel-plugin-inline-dotenv": "^1.2.0",
    "chai": "^4.2.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.11.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "forever": "^0.15.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2"
  }
}
